<% if object.errors.any? %>
	<div class="alert alert-danger" role="alert">
		<h2 class="alert-heading">
			<%= pluralize(object.errors.count, "error") %> 
			prevented the article from being saved
		</h2>
		<ul>
			<% object.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>
	</div>
<% end %>