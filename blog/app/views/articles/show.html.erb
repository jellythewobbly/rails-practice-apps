<h2 class="text-center">Title: <%= @article.title %></h2>

<div class="row">
	<div class="col-md-8 mx-auto">
		<div class="card card-body highlight">
			<h4 class="text-center"><b>Description: </b></h4>
			<hr>
			<%= @article.description %>
		</div>
	</div>
</div>

<%= link_to 'Edit', edit_article_path(@article) %>

<%= link_to 'Delete', article_path(@article), data: {confirm: "Are you sure you want to delete this article?"}, method: :delete %>

<p><%= link_to 'Back to articles', articles_path %></p>
