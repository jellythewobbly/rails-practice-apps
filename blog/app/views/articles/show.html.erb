<h1 class="text-center">Title: <%= @article.title %></h1>

<div class="row">
	<div class="col-md-8 mx-auto">
		<div class="card card-body bg-light text-center">
			<h4><b>Description</b></h4>
			<hr>
			<p class="my-4"><%= @article.description %></p>
			<hr>
			<div class="my-2">
				<%= link_to 'Edit article', edit_article_path(@article), class:'btn btn-success mx-1' %>
				<%= link_to 'Delete article', article_path(@article), class:'btn btn-danger mx-1', data: {confirm: "Are you sure you want to delete this article?"}, method: :delete %>
				<div class="my-3">
					<%= link_to 'Back to articles', articles_path, class:'btn btn-primary' %>
				</div>
			</div>
		</div>
	</div>
</div>



